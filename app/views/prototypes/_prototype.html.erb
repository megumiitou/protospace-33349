<div class="card">
  <%= link_to image_tag(prototype.image,  class: :card__img), prototypes_path if prototype.image.attached? %>
  <div class="card__body">
    <%= prototype.title, prototypes_path, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= "by #{prototype.user.name}", root_path, class: :card__user %>
  </div>
</div>